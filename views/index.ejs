<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Codepin</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.1/css/all.min.css'>
  <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Montserrat:400,700'>
  <link rel="stylesheet" href="/styles/index.css">
  <link rel="stylesheet" href="/styles/nav.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js'></script>
  <!-- <script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'></script> -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script src="/scripts/dropdown.js"></script>



</head>
<body>

<!-- Navbar -->
<section class="navigation">
  <div class="nav-container">
    <div class="brand">
      <a href="/">Codepin</a>
    </div>
    <nav>
      <div class="nav-mobile"><a id="nav-toggle" href="#!"><span></span></a></div>
      <ul class="nav-list">
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/create">Create</a>
        </li>
        <li>
          <a href="/resources">Resources</a>
        </li>
        <li>
        <% if (!user) { %>
          <li>
            <a href="/login">Login</a>
          </li>
          <li>
            <a href="/register">Register</a>
          </li>
        <% } else { %>
          <a href="#"><%=user[0].name%>'s Account</a>
          <ul class="nav-dropdown">
            <li>
              <a href="/user/:username">Profile</a>
            </li>
            <li>
                <a href="/favourites/:username">My Favourites</a>
            </li>
            <li>
              <a href="/my_resources">My Resources</a>
            </li>
            <li>
                <form class="dropform" method="POST" action="/logout">
                  <button class= "logout">Logout</button>
                </form>
            </li>
          </ul>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>
</section>

<div>
  <div id='hero'>
    <h1></h1>

    <p>Welcome to our resource wall!</p>

    <hr>

    <form class='form-inline'>
      <input id='search' class='form-control' type='search' placeholder='Search'>
      <button class='btn btn-default'>Submit</button>
    </form>

    <p id='footer'>Presented to you by: Colin, Karl and Kevin</p>

  </div>
</div>

<!-- partial -->

</body>
</html>
