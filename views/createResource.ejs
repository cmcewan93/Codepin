<div id="create-page">
  <div class="create">
    <h2 class="create-title">Create a Resource</h2>

    <form class="form-create" action="/create" method="POST">

      <label for="title">Title</label>
      <div class="input-title">
        <input type="description" name="title" placeholder="Enter a Title" autocomplete="off">
      </div>

      <label for="description">Description</label>
      <div class="input-description">
        <input type="description" name="description" placeholder="Enter a description" autocomplete="off">
      </div>

      <label for="tag">Tag</label>
      <div class="input-url">
          <input type="tag" name="tag" placeholder="Enter a tag" autocomplete="off">
        </div>

      <label for="imgUrl">Add Image</label>
      <div class="input-url">
        <input type="imgUrl" name="imgUrl" placeholder="Enter a URL" autocomplete="off">
      </div>
      <input type="submit" value="Create">

    </form>
  </div>
